# Telemetry & Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_OPENTELEMETRY=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Security
